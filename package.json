{
  "name": "whatsapp-clone",
  "version": "1.0.0",
  "description": "My project to understand how real time chat app works",
  "main": "index.js",
  "scripts": {
    "test": "mocha ./src/**/__tests__/*.test.js --compilers js:@babel/register",
    "build-api": "rm -Rf build/api && babel src/api -d build/api && rm -Rf build/core && babel src/core -d build/core",
    "api-server": "nodemon --exec npm run babel-node src/api/api-server",
    "babel": "babel",
    "babel-node": "babel-node",
    "nodemon": "nodemon --exec npm run babel-node",
    "eslint": "eslint",
    "postinstall": "npm run build-api",
    "build-view": "rm -Rf build/view && gulp build-view",
    "view-server": "gulp view-server",
    "dev:view": "webpack-dev-server --watch",
    "gulp": "gulp",
    "webpack-dev-server": "webpack-dev-server --port 5000",
    "deploy": "build-view and push index & build to gh"
  },
  "engines": {
    "node": "8.6.0",
    "npm": "5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BJCheng/whatsapp-clone.git"
  },
  "author": "Ben-Jen Cheng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BJCheng/whatsapp-clone/issues"
  },
  "homepage": "https://github.com/BJCheng/whatsapp-clone#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "bluebird": "^3.5.3",
    "chai": "^4.2.0",
    "eslint": "^5.12.0",
    "eslint-plugin-react": "^7.12.3",
    "file-loader": "^2.0.0",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "mocha": "^5.2.0",
    "random-words": "^1.1.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^5.1.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "uuid": "^3.3.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0",
    "webpack-dev-server": "^3.1.14"
  },
