{
  "name": "whatsapp-clone",
  "version": "1.0.0",
  "description": "My project to understand how real time chat app works",
  "main": "index.js",
  "scripts": {
    "test": "mocha ./src/**/__tests__/*.test.js --compilers js:@babel/register",
    "build-api": "rm -Rf build/api && babel src/api -d build/api",
    "babel": "babel",
    "babel-node": "babel-node",
    "nodemon": "nodemon --exec npm run babel-node",
    "eslint": "eslint",
    "postinstall": "npm run build-api",
    "build-view": "rm -Rf dist/view && gulp build-view",
    "view-server": "gulp view-server",
    "dev:view": "webpack-dev-server --watch",
    "dev:api": "npm run build-api && nodemon build/api/api-server",
    "gulp": "gulp"
  },
  "engines": {
    "node": "8.6.0",
    "npm": "5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BJCheng/whatsapp-clone.git"
  },
  "author": "Ben-Jen Cheng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BJCheng/whatsapp-clone/issues"
  },
  "homepage": "https://github.com/BJCheng/whatsapp-clone#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "eslint": "^5.8.0",
    "eslint-plugin-react": "^7.11.1",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "mocha": "^5.2.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "redis": "^2.8.0",
    "url-join": "^4.0.0",
    "validator": "^10.8.0"
  }
}
